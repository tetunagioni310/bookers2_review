<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <table class="table">
        <tbody>
          <tr>
            <% if @user.profile_image.attached? %>
              <%= image_tag @user.profile_image, size: '100x100' %>
            <% else %>
              <%= image_tag 'default-image.jpeg', size: '100x100'%>
            <% end %>
          </tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <a class="btn btn-outline-secondary btn-block" href="/users/<%= @user.id %>/edit"><i class="fas fa-user-cog"></i></a>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, url: books_path, method: :post do |f| %>

      <div class="form-group">
        <label for="book_title">Title</label><br>
        <%= f.text_field :title, class: 'form-control book_title', value: "" %>
      </div>
      <div class="form-group">
        <%= f.label :body, "Opinion" %><br>
        <%= f.text_area :body, class: "form-control book_body", value: "" %>
      </div>
      <div class="form-group">
        <%= f.submit "Create Book", class: "btn btn-success" %>
      </div>
      <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        
        <tbody>
          <tr>
            <td>
              <a href="/users/<%= @user.id %>">
                <% if @book.user.profile_image.attached? %>
                  <%= image_tag @book.user.profile_image, size: '80x80' %>
                <% else %>
                  <%= image_tag 'default-image.jpeg', size: '80x80' %>
                <% end %>
                <br>
                <%= @book.user.name %>
              </a>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success " %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, data: {confirm: "削除しますか？"}, class: "btn btn-sm btn-danger " %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>